<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, viewport-fit=cover">
  {%- if page_description -%}
    <meta name="description" content="{{ page_description }}">
  {%- endif -%}
  <title>{% if page_title %}{{ page_title }} | {% endif %}{{ shop.name }}</title>
  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'product-detail.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'brand-story.css' | asset_url }}">
  {% include 'social-meta-tags' %}
</head>
<body class="{{ page_title | handle }}">
  {% section 'header' %}
  
  {%- if template contains 'index' -%}
    {{ content_for_index }}
  {%- else -%}
    <main id="MainContent" class="main-content" role="main">
      {{ content_for_layout }}
    </main>
  {%- endif -%}
  
  {% section 'footer' %}
  
  <script src="{{ 'script.js' | asset_url }}"></script>
  <script src="{{ 'main.js' | asset_url }}"></script>
  {% if template contains 'product' %}
    <script src="{{ 'product-detail.js' | asset_url }}"></script>
  {% endif %}
</body>
</html>